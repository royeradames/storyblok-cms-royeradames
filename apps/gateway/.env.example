# ===========================================
# DATABASE
# ===========================================
# Local (Docker)
DATABASE_URL=postgresql://dev:dev@localhost:5432/gateway
# Production (Neon) - uncomment and fill in
# DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# ===========================================
# STORYBLOK (required for storyblok:seed scripts)
# ===========================================
STORYBLOK_PUBLIC_TOKEN=                    # Published content only (production)
NEXT_PUBLIC_STORYBLOK_PREVIEW_TOKEN=       # Draft content - Visual Editor
STORYBLOK_PREVIEW_SECRET=                  # Webhook secret for preview URL validation
STORYBLOK_SPACE_ID=                        # Your space ID (required for seed push)
STORYBLOK_PERSONAL_ACCESS_TOKEN=            # Management API (required for seed push)

# ===========================================
# BETTER AUTH
# ===========================================
BETTER_AUTH_SECRET=               # Generate with: openssl rand -base64 32
BETTER_AUTH_URL=http://localhost:3000

# ===========================================
# UPLOADTHING
# ===========================================
UPLOADTHING_SECRET=
UPLOADTHING_APP_ID=

# ===========================================
# SEARCH (Feature Flag)
# ===========================================
# Options: postgres | algolia
SEARCH_PROVIDER=postgres

ALGOLIA_APP_ID=
ALGOLIA_API_KEY=
ALGOLIA_ADMIN_KEY=
ALGOLIA_INDEX_NAME=

# ===========================================
# PREVIEW
# ===========================================
PREVIEW_USER_ID=preview-user-001
