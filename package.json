{
  "name": "storyblok-cms",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:gateway": "turbo dev --filter=gateway",
    "dev:web": "turbo dev --filter=web",
    "build": "turbo build",
    "build:gateway": "turbo build --filter=gateway",
    "build:web": "turbo build --filter=web",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/bun": "^1.3.7",
    "turbo": "2.8.7",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.3"
}
