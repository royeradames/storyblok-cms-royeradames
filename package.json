{
  "name": "storyblok-cms",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:gateway": "turbo dev --filter=gateway",
    "dev:web": "turbo dev --filter=web",
    "build": "turbo build",
    "build:gateway": "turbo build --filter=gateway",
    "build:web": "turbo build --filter=web",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "db:generate": "turbo db:generate --filter=gateway",
    "db:migrate": "turbo db:migrate --filter=gateway",
    "db:push": "turbo db:push --filter=gateway",
    "db:studio": "turbo db:studio --filter=gateway",
    "db:seed": "bun scripts/seed-preview-user.ts",
    "storyblok:pull": "storyblok components pull -s $STORYBLOK_SPACE_ID",
    "storyblok:types": "storyblok-generate-ts source=./components.$STORYBLOK_SPACE_ID.json target=./packages/shared-cms/src/types",
    "storyblok:sync": "bun run storyblok:pull && bun run storyblok:types",
    "storyblok:push": "storyblok components push --space $STORYBLOK_SPACE_ID --from $STORYBLOK_SPACE_ID",
    "storyblok:seed": "bun run --cwd apps/gateway storyblok:seed",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/bun": "^1.3.7",
    "turbo": "2.7.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.3"
}
